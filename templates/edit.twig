{% extends 'base.twig' %}

{% block body %}

<h2>Edit profile</h2>
<form action="/edit-post/{{profile.id}}" method="POST">
	<div class="mb-3 frm-name">
  <label class="form-label">Name</label>
  <input type="name" id="name" name="name" value="{{profile.name}}" class="form-control"  >
</div>
<div class="mb-3 frm-surname">
  <label   class="form-label">Surname</label>
  <input type="text" name="surname" id="surname" value="{{profile.surname}}" class="form-control"  >
</div>
<div class="mb-3 frm-password">
  <label  class="form-label">Password</label>
  <input type="password" name="password" id="pass" class="form-control"  >
</div>
<div class="mb-3">

  <p>Sex</p>
  <input  type="radio"  checked="checked" name="sex" value="male" >
  <label class="form-check-label" for="male">
    Male
  </label>
  <input  type="radio"  name="sex" value="female">
  <label class="form-check-label" for="female">
    Female
  </label>

</div>
<div class="mb-3">
  <label for="groupnum" class="form-label">Group number (2-5)</label>
  <input type="number" id="groupnum" min="2" name="groupnum" max="5" value="{{profile.groupnum}}" class="form-control">
</div>
<div class="mb-3 frm-email">
  <label for="exampleFormControlInput1"  class="form-label">Email</label>
  <input type="email" id="email" name="email" value="{{profile.email}}" class="form-control"  >
</div>
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">EGE scores</label>
  <input type="number" min="0" value="0" name="egescore" value="{{profile.egescore}}" id="egescore" class="form-control" >
</div>

<input type="submit" class="btn btn-success" value="Сохранить">
<a class="btn btn-secondary" href="/">Выйти</a>
</form>

{% endblock %}